<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
    tools:context="id.sch.smktelkom_mlg.learn.fishingclubregistration.MainActivity">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="3.63"
            app:srcCompat="@drawable/logo" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.63"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="3.63" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63"
            android:text="Your fishing experience"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.63">

            <RadioButton
                android:id="@+id/rbB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Beginner (Fishing for less than 1 year)" />

            <RadioButton
                android:id="@+id/rbA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Angler (Fishing for 1 - 4 year)" />

            <RadioButton
                android:id="@+id/rbP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Professional Angler (Fishing for more than 5 year)" />
        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="3.63" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63"
            android:text="Your Favourite Fishing Rod "
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <CheckBox
            android:id="@+id/cbS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63"
            android:text="Spinning Rods" />

        <CheckBox
            android:id="@+id/cbI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63"
            android:text="Ice Rods" />

        <CheckBox
            android:id="@+id/cbF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63"
            android:text="Fly Rods" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="3.63" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63"
            android:text="Your Favourite Bait"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <Spinner
            android:id="@+id/spBait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63"
            android:entries="@array/bait" />

        <Button
            android:id="@+id/bOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63"
            android:text="SUBMIT" />

        <TextView
            android:id="@+id/tv90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63"
            android:text="Your Result"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <TextView
            android:id="@+id/tvHasilName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63" />

        <TextView
            android:id="@+id/tvHasilExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63" />

        <TextView
            android:id="@+id/tvHasilRod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63" />

        <TextView
            android:id="@+id/tvHasilBait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.63" />


    </LinearLayout>
</ScrollView>
